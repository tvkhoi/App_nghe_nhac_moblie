<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/img_3">

    <TextView
        android:id="@+id/textView_ten_bai_hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Tên bài hát"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/textView_thoi_gian_bat_dau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_ten_bai_hat"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="360dp"
        android:text="00:00"
        android:textSize="25sp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/textView_thoi_gian_ket_thuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_alignRight="@id/textView_thoi_gian_bat_dau"
        android:layout_below="@id/textView_ten_bai_hat"
        android:layout_marginTop="360dp"
        android:text="00:51"
        android:textSize="25sp"
        android:textColor="#FFFFFF"/>

    <SeekBar
        android:id="@+id/seeBar_thoi_gian"
        android:layout_width="500dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="440dp"
        android:layout_marginRight="15dp"
        android:background="#4A4A45" />

    <ImageButton
        android:id="@+id/ImageButton_chuyen_tiep_trai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seeBar_thoi_gian"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:src="@drawable/chuyen_tiep_trai" />

    <ImageButton
        android:id="@+id/ImageButton_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seeBar_thoi_gian"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ImageButton_chuyen_tiep_trai"
        android:background="@null"
        android:src="@drawable/baseline_play_arrow_24" />

    <ImageButton
        android:id="@+id/ImageButton_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seeBar_thoi_gian"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
       android:layout_toRightOf="@id/ImageButton_play"
        android:background="@null"
        android:src="@drawable/baseline_stop_24" />

    <ImageButton
        android:id="@+id/ImageButton_chuyen_tiep_phai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seeBar_thoi_gian"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ImageButton_stop"
        android:background="@null"
        android:src="@drawable/chuyen_tiep_phai" />

    <ImageView
        android:id="@+id/imageView_cd_music"
        android:layout_width="293dp"
        android:layout_height="287dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="208dp"
        android:src="@drawable/dia_nhac" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="373dp"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="108dp"
        app:srcCompat="@drawable/not_nhac" />

</RelativeLayout>